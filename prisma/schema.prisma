generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    userId Int @default(autoincrement()) @id
    email String @unique
    name String
    photo String
    links Link[]
    buckets Bucket[]
}

model Bucket {
    bucketId String @default(nanoid(8)) @id @db.VarChar(8)
    user User @relation(fields: [userId], references: [userId])
    userId Int
    title String
    linkCount Int @default(0)
    createdAt DateTime @default(now())
    isShared Boolean @default(false)
    bucketLink BucketLink[]
}

model BucketLink {
    bucketId String @db.VarChar(8)
    linkId String @db.VarChar(8)
    bucket Bucket @relation(fields: [bucketId], references: [bucketId])
    link Link @relation(fields: [linkId], references: [linkId])

    @@id([bucketId, linkId])
}

model Link {
    linkId String @default(nanoid(8)) @id @db.VarChar(8)
    user User @relation(fields: [userId], references: [userId])
    userId Int
    URL String
    createdAt DateTime @default(now())
    openedAt DateTime @default(now())
    views Int @default(0)
    tags String[] @default([])
    title String?
    bucketLink BucketLink[]
}